.carousel
  max-height: 80vh
  .carousel-inner
    .scrim
      z-index 9999
      background linear-gradient(to bottom, rgba(0, 0, 0, 0.01) 0%, rgba(0, 0, 0, 0.3) 65%, rgba(0, 0, 0, 0.5) 100%)
    .item
        img
          height: 80vh
          width: 100vw
          object-fit: cover
          margin 0 auto
          -webkit-filter brightness(70%) contrast(120%) saturate(120%)
          filter: brightness(70%) contrast(120%) saturate(120%)

  .carousel-indicators
    .active
      width: 4px
      height: 4px
    li
      width: 3px
      height: 3px
      margin: 5px
