.heading
  color #990000
  font-size 10rem
  font-weight 300
  text-align center
  text-transform uppercase
  padding-bottom 40px
  filter drop-shadow(1px 1px 3px black)

.button
  border-radius 0px
  height 80px
  vertical-align middle

.well
  max-width 500px
  margin 0px auto 10px

.scrim
  background linear-gradient(to bottom, rgba(0,0,0,0), rgba(0,0,0,1))

